<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" android:padding="5dp">

    <ToggleButton
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:id="@+id/item_complete_toggle"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textOff=""
            android:textOn=""
            android:background="@drawable/toggle_state"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/item_name"
            android:text="sfasfsaf"
            android:textSize="20dp"
            android:textColor="#404040"
            android:layout_centerVertical="true" android:layout_toRightOf="@+id/item_complete_toggle"
            android:layout_toEndOf="@+id/item_complete_toggle" android:layout_marginLeft="10dp"
            android:layout_marginRight="40dp"/>
    <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/item_delete"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:src="@drawable/delete"
            android:layout_marginRight="10dp"/>
</RelativeLayout>